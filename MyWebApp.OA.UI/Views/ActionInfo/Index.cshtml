@{
    /**/

    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/themes/default/easyui.css" rel="stylesheet" />
    <link href="~/Content/themes/icon.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/jquery.easyui.min.js"></script>
    <script src="~/Scripts/easyui-lang-zh_CN.js"></script>
    <script src="~/Scripts/datapattern.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script type="text/javascript">

        $(function () {
            $("#addDiv").css("display", "none");
            $("#editDiv").css("display", "none");
            loadData();

            ////$("#btnSearch").click(function () {
            ////    $('#tt').datagrid('clearSelections');
            ////    var pars = {
            ////        name: $("#txtUName").val(),
            ////        remark: $("#txtURemark").val()
            ////    };

            //    loadData(pars);
            //});
        })

        function loadData(pars) {
            $('#tt').datagrid({
                url: '/ActionInfo/GetActionInfo',
                title: '权限数据表格',
                width: 900,
                height: 500,
                fitColumns: true, //列自适应
                nowrap: false,
                idField: 'ID',//主键列的列明
                loadMsg: '正在加载权限的信息...',
                pagination: true,//是否有分页
                singleSelect: false,//是否单行选择
                pageSize: 5,//页大小，一页多少条数据
                pageNumber: 1,//当前页，默认的
                pageList: [5, 10, 15],
                queryParams: pars,//往后台传递参数
                columns: [[//c.UserName, c.UserPass, c.Email, c.RegTime
                    { field: 'ck', checkbox: true, align: 'left', width: 50 },
                    { field: 'ID', title: '编号', width: 200 },
                    { field: 'ActionInfoName', title: '权限名称', width: 250 },
                    { field: 'Sort', title: '排序', width: 200 },
                    { field: 'Url', title: '请求地址', width: 300 },
                    { field: 'HttpMethod', title: '请求方式', width: 200 },
                    { field: 'ActionTypeEnum', title: '权限类型', width: 200 },
                    { field: 'Remark', title: '备注', width: 300 },
                    {
                        field: 'SubTime', title: '时间', width: 500,
                        formatter: function (value, row, index) {
                            return (eval(value.replace(/\/Date\((\d+)\)\//gi, "new Date($1)"))).pattern("yyyy-MM-dd HH:mm:ss");
                        }
                    },
                    {
                        field: 'Operator', title: '操作', width: 500,
                        formatter: function (value, row, index) {
                            var str = "<a href='javascript:void(0)' ids='" + row.ID + "' class='deleteLink' >删除</a> ";
                            str += "&nbsp;&nbsp;<a href='javascript:void(0)' ids='" + row.ID + "' class='editLink'>修改</a>";
                            return str;
                        }
                    }

                ]],
                toolbar: [
                    {
                        id: 'btnAdd',
                        text: '添加',
                        iconCls: 'icon-add',
                        handler: function () {
                            addUserInfo();
                        }
                    },
                    {
                        id: 'btnEdit',
                        text: '修改',
                        iconCls: 'icon-edit',
                        handler: function () {
                            editInfo();
                        }
                    },
                    {
                        id: 'btnDelete',
                        text: '删除',
                        iconCls: 'icon-remove',
                        handler: function () {
                            deleteInfo();
                        }
                    }
                ],
                onLoadSuccess: function (e, field) {
                    $(".deleteLink").click(function () {
                        var id = $(this).attr("ids");
                        deleteInfo(id);


                    });

                    $(".editLink").click(function () {
                        var id = $(this).attr("ids");
                        editInfo(id);
                    });
                }

            });
        }
        //添加用户信息
        function addUserInfo() {
            $("#addDiv").css("display", "block");
            $('#addDiv').dialog({
                title: "添加角色信息",
                modal: true,
                collapsible: true,
                width: 300,
                height: 200,
                buttons: [{
                    text: '确定',
                    iconCls: 'icon-ok',
                    handler: function () {
                        //自己完成表单校验
                        $("#addForm").submit();//提交表单.
                    }
                }, {
                    text: '取消',
                    iconCls: 'icon-no',
                    handler: function () {
                        $('#addDiv').dialog('close');


                    }
                }]
            });
        }
        //添加完成以后调用该方法
        function afterAdd() {
            $('#addDiv').dialog('close');
            $("#tt").datagrid('reload');
            $("#addForm input").val("");
        }


        //删除信息
        function deleteInfo(ids) {

            if (typeof (ids) == "undefined") {
                var rows = $('#tt').datagrid('getSelections');
                if (rows.length == 0 || !rows) {
                    $.messager.alert("提醒", "请选择要删除的记录!", 'error');
                    return;
                }
            }

            if ($.messager.confirm("提示", "您确定要删除吗？", function (r) {
                if (r) {
                    var strId = "";

                    if (typeof (ids) == "undefined") {
                        for (var i = 0; i < rows.length; i++) {
                            strId = strId + rows[i].ID + ",";
                        }

                        strId = strId.substr(0, strId.length - 1);
                    } else {
                        strId = ids;
                    }





                    $.post("/RoleInfo/DeleteRoleInfo", { "strId": strId }, function (data) {
                        if (data == "ok") {
                            $('#tt').datagrid('reload');
                            $('#tt').datagrid('clearSelections');
                        }
                    })

                }

            }));

        }


        //修改信息
        function editInfo(ids) {
            var id;
            if (typeof (ids) == "undefined") {
                var rows = $("#tt").datagrid('getSelections');
                if (rows.length != 1) {
                    $.messager.alert("提示", "请选择一条要修改的数据", "error");
                    return;
                }

                id = rows[0].ID;

            } else {
                id = ids;
            }




            $("#editRoleDiv").css("display", "block");
            $("#editRoleFrame").attr("src", "/RoleInfo/ShowEdit/?id=" + id);
            //$("#txtName").val(rows[0].UName);
            //$("#txtPwd").val(rows[0].UPwd);
            //$("#txtRemark").val(rows[0].Remark);
            //$("#txtID").val(rows[0].ID);
            //$("#txtSubTime").val(ChangeDateFormat(rows[0].SubTime));
            //$("#txtDelFlag").val(rows[0].DelFlag);
            //$("#txtSort").val(rows[0].Sort);
            $('#editRoleDiv').dialog({
                title: "修改角色信息",
                modal: true,
                collapsible: true,
                width: 400,
                height: 500,
                buttons: [{
                    text: '确定',
                    iconCls: 'icon-ok',
                    handler: function () {
                        //自己完成表单校验
                        $("#editRoleFrame")[0].contentWindow.submitForm();

                    }
                }, {
                    text: '取消',
                    iconCls: 'icon-no',
                    handler: function () {
                        $('#editRoleDiv').dialog('close');

                    }
                }]
            });
        }
        function afterEdit() {
            $('#editRoleDiv').dialog('close');
            $("#tt").datagrid('reload');
        }

        //将序列化成json格式后日期(毫秒数)转成日期格式
        function ChangeDateFormat(cellval) {
            var date = new Date(parseInt(cellval.replace("/Date(", "").replace(")/", ""), 10));
            var month = date.getMonth() + 1 < 10 ? "0" + (date.getMonth() + 1) : date.getMonth() + 1;
            var currentDate = date.getDate() < 10 ? "0" + date.getDate() : date.getDate();
            var Hour = date.getHours() < 10 ? "0" + date.getHours() : date.getHours();
            var mm = date.getMinutes() < 10 ? "0" + date.getMinutes() : date.getMinutes();
            var ss = date.getSeconds() < 10 ? "0" + date.getSeconds() : date.getSeconds();
            return date.getFullYear() + "-" + month + "-" + currentDate + " " + Hour + ":" + mm + ":" + ss;
        }
    </script>

</head>
<body>

    <table id="tt" style="width: 700px;" title="标题，可以使用代码进行初始化，也可以使用这种属性的方式" iconcls="icon-edit"></table>

    <!--------------添加角色信息------->
    <div id="addDiv">
        @using (Ajax.BeginForm("AddRoleInfo", new { }, new AjaxOptions() { Confirm = "确定要添加吗？", OnSuccess = "afterAdd", HttpMethod = "post" }, new { id = "addForm" }))
        {
            <table>
                <tr><td>角色名</td><td><input type="text" name="RoleName" /></td></tr>
                <tr><td>排序</td><td><input type="text" name="Sort" /></td></tr>
                <tr><td>备注</td><td><input type="text" name="Remark" /></td></tr>
            </table>
        }
    </div>
    <!---------------添加信息结束-->
    <!--------------修改信息-->
    <div id="editRoleDiv">
        <iframe id="editRoleFrame" frameborder="0" scrolling="no" width="100%" height="100%"></iframe>

    </div>
    <!------------------------------------修改信息结束-->
</body>
</html>
